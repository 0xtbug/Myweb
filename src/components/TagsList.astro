---
const { tags } = Astro.props;
---

<section class="py-4">
	<ul class="flex flex-wrap gap-2">
		{
			tags.map((tag) => (
				<li class="tag-item bg-dark-gray px-2 py-1 rounded">
					<a href={`/tags/${tag}`} class="tag-link text-muted-lime hover:text-hover">#{tag}</a>
				</li>
			))
		}
	</ul>
</section>
