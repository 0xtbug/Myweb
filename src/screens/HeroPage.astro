---
import Image from "astro/components/Image.astro";
import avatar from "../assets/avatar.png";
import "../styles/global.css";
import { Icon } from 'astro-icon/components';
---

<section class="flex flex-col sm:flex-row gap-1 sm:gap-10 w-full space-x-15 justify-center items-center h-screen">
    <section>
        <h1 class="shrink text-4xl sm:text-3xl lg:text-4xl text-center sm:text-left font-visitor">Ahmad Tubagus Nabil Maulana</h1>
        <p class="text-2xl text-center sm:text-left">Full-Stack Developer</p>
        <div class="flex flex-row gap-6 justify-center sm:justify-start my-12">
            <a class="hover:text-muted-lime" href="https://github.com/0xtbug"><Icon name="lucide:github" width={36} height={36}/></a>
            <a class="hover:text-muted-lime" href="https://linkedin.com/in/tubagusnm"><Icon name="lucide:linkedin" width={36} height={36}/></a>
        </div>
    </section>
    <section>
        <Image src={avatar} alt="TubagusNM" class="w-[250px] h-[250px] sm:w-[250px] sm:h-[250px] lg:w-[350px] lg:h-[350px] rounded-full border-4" />
    </section>
</section>
